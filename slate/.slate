# Configs
config defaultToCurrentScreen	true
config nudgePercentOf 		screenSize
config resizePercentOf 		screenSize
config secondsBetweenRepeat     0.1
config checkDefaultsOnLoad 	true
config focusCheckWidthMax    	3000

# window hints
config windowHintsShowIcons		true
config windowHintsSpread		true
config windowHintsIgnoreHiddenWindows	false

# positioning grid
#bind g:cmd grid padding:5 0:6,2 1:8,3

# The modifier keys
alias modifiers ctrl;alt;cmd
alias modifiers- ctrl;alt;cmd;shift

# Throw
bind ]:${modifiers} throw right resize full
bind [:${modifiers}  throw left resize full

# Grow
bind right:${modifiers}  resize +5% 0
bind left:${modifiers}   sequence nudge -5% +0 | resize +5% +0
bind up:${modifiers}     sequence nudge +0 -5% | resize +0 +5%
bind down:${modifiers}  resize +0   +5%

# Shrink
bind right:${modifiers-} sequence nudge +5% +0 | resize -5% +0
bind left:${modifiers-}  resize -5% +0
bind up:${modifiers-}    resize +0 -5%
bind down:${modifiers-}  sequence nudge +0 +5% | resize +0 -5%

#####################
##     LAYOUTS     ##
#####################

##############################################
# Window positions, relative to current screen
##############################################

# Use compass rose for directions (n,s,e,w)
# Use percentage of screen (width|height) for size

alias sz-x	screenSizeX
alias sz-y	screenSizeY

alias so-x	screenOriginX
alias so-y	screenOriginY

alias full	move ${so-x};${so-y}				${sz-x};${sz-y}
alias nw-85	move ${so-x};${so-y}				${sz-x}*.85;${sz-y}*.85
alias se-85	move ${so-x}+${sz-x}*.15;${so-y}+${sz-y}*.15	${sz-x}*.85;${sz-y}*.85
alias se-60	move ${so-x}+${sz-x}*.4;${so-y}+${sz-y}*.5	${sz-x}*.6;${sz-y}*.5
alias e-50	move ${so-x}+${sz-x}*.5;${so-y}    		${sz-x}*.5;${sz-y}
alias e-60	move ${so-x}+${sz-x}*.4;${so-y}  		${sz-x}*.6;${sz-y}
alias w-50	move ${so-x};${so-y}                  		${sz-x}*.5;${sz-y}
alias w-60	move ${so-x};${so-y}                  		${sz-x}*.6;${sz-y}

alias nw-50     move ${so-x};${so-y}                  		${sz-x}*.5;${sz-y}*.5
alias n-50      move ${so-x};${so-y}				${sz-x};${sz-y}*.5
alias n-33	move ${so-x}+${sz-x}*.33;${so-y}		${sz-x}*.33;${sz-y}*.33
alias ne-50     move ${so-x}+${sz-x}*.5;${so-y}    		${sz-x}*.5;${sz-y}*.5

alias sw-50     move ${so-x};${so-y}+${sz-y}*.5    		${sz-x}*.5;${sz-y}*.5
alias sw-66	move ${so-x};${so-y}+${sz-y}*.33		${sz-x}*.5;${sz-y}*.66
# Bump up 20px from bottom to account for Terminal's tab bar
alias s-50	move ${so-x};${so-y}+${sz-y}*.5			${sz-x};${sz-y}*.5

alias se-50     move ${so-x}+${sz-x}*.5;${so-y}+${sz-y}*.5    	${sz-x}*.5;${sz-y}*.5
alias se-66	move ${so-x}+${sz-x}*.5;${so-y}+${sz-y}*.33	${sz-x}*.5;${sz-y}*.66

# Location bindings
bind u:${modifiers} ${nw-50}
bind i:${modifiers} ${n-50}
bind o:${modifiers} ${ne-50}

bind j:${modifiers} ${w-50}
bind k:${modifiers} ${full}
bind l:${modifiers} ${e-50}

bind m:${modifiers} ${sw-50}
bind ,:${modifiers} ${s-50}
bind .:${modifiers} ${se-50}

alias calendar		'Calendar'
bind c:${modifiers} focus ${calendar}

alias editor            'Emacs'
bind e:${modifiers} focus ${editor}

alias evernote	    	'Evernote'
bind v:${modifiers} focus ${evernote}

alias safari	       	'Safari'
bind s:${modifiers} focus ${safari}

alias slack 	       	'Slack'
bind a:${modifiers} focus ${slack}

alias skype	    	'Skype'
bind y:${modifiers} focus ${skype}

alias terminal	    	'iTerm2'
bind t:${modifiers} focus ${terminal}

alias intellij	    	'IntelliJ IDEA'
bind n:${modifiers} focus ${intellij}

alias itunes	    'iTunes'
bind 3:${modifiers} focus ${itunes}

alias mail              'Mail'
bind h:${modifiers} focus ${mail}

alias chrome            'Chrome'
bind r:${modifiers} focus ${chrome}

alias zoom	    	  'zoom.us'

alias internal-res 1680x1050
alias thunderbolt-res 2560x1440

# standard layout for all apps on a 2560x1440 screen (or equiv)
default wqhd resolutions:${thunderbolt-res}

layout wqhd		${editor}		${w-50}
layout wqhd		${evernote}		${w-50}
layout wqhd		${intellij} 		${w-50}
layout wqhd		${mail}			${w-50}

layout wqhd		${chrome}:REPEAT_LAST	${e-50}
layout wqhd		${slack}   		${e-50}
layout wqhd		${safari}:REPEAT_LAST	${e-50}
layout wqhd		${terminal} 		${e-50}
#layout dev		${skype}    		${e-50}

layout wqhd		${calendar}		${full}
layout wqhd		${itunes}		${full}

# wqhd layout for videoconferencing
layout wqhd-vc		${zoom}			${n-33}

layout wqhd-vc		${editor}   		${sw-66}
layout wqhd-vc		${evernote}		${sw-66}
layout wqhd-vc		${intellij} 		${sw-66}
layout wqhd-vc		${mail}			${sw-66}

layout wqhd-vc		${chrome}:REPEAT_LAST	${se-66}
layout wqhd-vc		${slack}   		${se-66}
layout wqhd-vc		${safari}:REPEAT_LAST  	${se-66}
layout wqhd-vc		${terminal} 		${se-66}
#layout wqhd-vc		${skype}    		${se-66}


# Internal-only development
default internal-dev	resolutions:${internal-res}

layout internal-dev	${editor}	${e-60}
layout internal-dev	${evernote}	${w-60}
layout internal-dev	${intellij} 	${e-60}
layout internal-dev	${safari}   	${w-60}
layout internal-dev	${skype}    	${e-50}
layout internal-dev	${slack}   	${e-50}
layout internal-dev	${terminal} 	${s-50}

bind 0:${modifiers}	relaunch
bind 1:${modifiers}	layout		wqhd
bind 2:${modifiers}	layout		wqhd-vc
